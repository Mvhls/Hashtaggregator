<!DOCTYPE html>
<html ng-app="hashtag">
  <head>
    <title><%= title %></title>
    <link rel="icon" type="text/css" href="/images/g8or.png">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,900|Raleway:400,700|Josefin+Slab:400,700' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/reset.css'/>
    <link rel='stylesheet' href='/stylesheets/shoelace.css'/>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
  </head>

  <body ng-controller="mapController">

    <div id = "modal">
      <form id="change-hashtag-form" class='pure-form'>
      <ul>
      <li><input class="pure-input-1" type='text' name='hashtag' id='form-box' placeholder="#Trending"></li>
      <li><input id="button" class="button-xlarge pure-button" type='submit' value='Choose your hashtag'></li>
       </ul>
      </form> 
    </div> 
    <div id = "banner-div"><img id="banner" src="/images/Hashtaggregator_banner.jpg" ></div>
    

    <section id='search-tweets-div'>
      <h1>{{title}}</h1>
      <span id="search-box-text">Search Map for Tweets:</span> 
      <input class="pure-input-1" id='search-box-itself' ng-model="search">
      <ul>
          <li class="tweet" ng-repeat="tweet in tweets | filter:search | orderBy:'stars':!reverse | limitTo:10" ng-show="search">
              <a href="{{tweet.longitude}}, {{tweet.latitude}}">{{tweet.content}} : {{tweet.username}} : Favorites: {{tweet.stars}}</a>
          </li>
      </ul>
    </section>


    <div id="map" class="map"></div>


<!-- load javascripts at end of document for faster page load -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.min.js"></script>
    <script type = "text/javascript" src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script type = "text/javascript" src="/javascripts/map.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">window.socket = io.connect();</script>
    <script type = "text/javascript" src="/javascripts/main.js"></script>
  </body>
</html>
